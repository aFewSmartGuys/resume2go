<!DOCTYPE html>
<html ng-app="app">
<head>
	<title>Dashboard</title>
	<!-- <link rel="stylesheet" type="text/css" href="stylesheets/style.css"> -->
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>

<body ng-cloak>

<div class="content-wrapper">
	<div class="pure-g">
		<div class="l-box pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
				<h3 class="content-subhead">
				</h3>
		</div>
	</div>
	<div class="ribbon l-box-lrg pure-g">
			<div class="pure-u-1 pure-u-md-1-2 pure-u-lg-3-5">
				<h1 style="text-shadow: 1px 1px 3px black;">Information</h1>
			</div>
	</div>
	<div class="content" ng-controller="mainCtrl">
		<div>
			<select ng-options="id for id in ids" ng-model="currId"></select>
		</div>
		<div class="pure-g">
			<div id="new" class="l-box-lrg pure-u-3 pure-u-md-3-5">
				<form class="pure-form ">
					<fieldset>
						<input id="title" type="text" placeholder="Title" ng-value="title" ng-model="meta.title"><br>
						<input id="mainImagePath" type="text" placeholder="Main Image Path" ng-value="mainImagePath" ng-model="meta.mainImagePath"><br>
						<input id="phone" type="text" placeholder="Phone Number" ng-value=phone ng-model="meta.phone"><br>
						<input id="id" type="text" placeholder="Id For this Portfolio" ng-value="id" ng-model="meta.id" required><br>
						<h3>Sections</h3>
						<div>
							<ul id="sections">
								<li ng-repeat="c in content">
									<input class="sectionTitle" name="sectionTitle" type="text" placeholder="Section Title" style="width:100px" 
										ng-model="c.title" ng-value="c.title">
									<textarea class="sectionContent" name="sectionContent" placeholder="Content Goes Here..." ng-model="c.content">{{c.content}}</textarea>
									<button class="addRemoveLineButton" ng-click="removeSection(c)">-</button>
								</li>
							</ul>
						</div>
						<!-- <img id="spinner" class="spin" src="images/load.gif"> -->
						<button id="addNew" type="submit" class="pure-button" ng-click="save()">Save</button>
						<button class="addRemoveLineButton" ng-click="newSection()">+</button>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>

<footer>
		<p>&copy;Copyright 2016</p>
</footer>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
	<script src="/js/Rezoomae.js"></script>
	<script src="/js/Content.js"></script>
	<script src="/js/dashboardApp.js"></script>
</body>
</html>